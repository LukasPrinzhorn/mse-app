<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph2"
    app:startDestination="@id/First2Fragment">

    <fragment
        android:id="@+id/First2Fragment"
        android:name="com.example.weihnachtmaerkte.markets.detailedview.DetailedMarketFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_detailed_market">

        <action
            android:id="@+id/action_First2Fragment_to_Second2Fragment"
            app:destination="@id/Second2Fragment" />
        <action
            android:id="@+id/action_First2Fragment_to_Third2Fragment"
            app:destination="@id/Third2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/Second2Fragment"
        android:name="com.example.weihnachtmaerkte.markets.detailedview.DetailedMarketRateFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_detailed_market_rate">

        <action
            android:id="@+id/action_Second2Fragment_to_First2Fragment"
            app:destination="@id/First2Fragment"
            app:popUpTo="@id/First2Fragment"
            app:popUpToInclusive="true"/>

    </fragment>
    <fragment
        android:id="@+id/Third2Fragment"
        android:name="com.example.weihnachtmaerkte.markets.detailedview.DetailedMarketCommentsFragment"
        android:label="@string/third_fragment_label"
        tools:layout="@layout/fragment_detailed_market_comments">

        <action
            android:id="@+id/action_Third3Fragment_to_First2Fragment"
            app:destination="@id/First2Fragment" />
    </fragment>
</navigation>
